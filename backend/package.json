{
	"name": "vt-server",
	"version": "0.0.1",
	"description": "The server for the VT application",
	"keywords": [
		"video",
		"server",
		"social",
		"streaming"
	],
	"license": "ISC",
	"author": "cuongnt02",
	"type": "module",
	"main": "app.ts",
	"scripts": {
		"start": "npm run build && fastify start -l info dist/app.js",
		"build": "tsc",
		"watch": "tsc -w",
		"dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Typescript,App\" -c \"yellow,bold,cyan,bold\" \"npm:watch\" \"npm:dev:start\"",
		"dev:start": "npm run build && fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js"
	},
	"devDependencies": {
		"@types/node": "^24.5.2",
		"eslint": "^9.35.0",
		"fastify-tsconfig": "^3.0.0",
		"neostandard": "^0.12.2",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"concurrently": "^9.2.1",
		"fastify": "^5.6.0",
		"fastify-cli": "^7.4.0"
	}
}
